{
  "name": "turbo-vendure-nextjs-poc",
  "private": true,
  "scripts": {
    "dev": "turbo run dev",
    "dev:vendure": "turbo run dev --filter=@repo/shop-api",
    "dev:storefront": "turbo run dev --filter=storefront",
    "build": "turbo run build",
    "build:vendure": "turbo run build --filter=@repo/shop-api",
